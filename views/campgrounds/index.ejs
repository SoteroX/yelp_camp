<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome To YelpCamp</h1>
      <p>List of Camp Grounds from all over the world</p>
      <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New CampGrounds</a></p>
    </div>
  </header>

  <div class="row" style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(camplist){ %>
        <div class="col-md-3 col-sm-6" style="text-align: center;">
          <div class="thumbnail">
            <img src="<%= camplist.image %>">
            <div class="caption">
              <h4><%= camplist.name %></h4>
            </div>
            <p>
              <a href="/campgrounds/<%= camplist._id %>" class="btn btn-primary">More Info</a>
            </p>
          </div>
        </div>
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>